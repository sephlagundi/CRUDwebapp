@model CRUDwebapp.Models.UserInfo


@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<h3>Login Form</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginUser" asp-controller="Home">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger">

                <div class="form-group">
                    <label asp-for="UserName" class="control-label">User Name:</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label">User Name:</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>

                <label>@Html.Raw(@ViewBag.Message) </label>

            </div>
        </form>
    </div>
</div>














